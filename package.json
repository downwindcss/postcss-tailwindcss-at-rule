{
	"name": "@downwindcss/postcss-tailwindcss-at-rules",
	"version": "0.0.1-alpha.3",
	"description": "PostCSS plugin for Tailwind CSS At-rules",
	"keywords": [
		"postcss",
		"css",
		"postcss-plugin",
		"tailwindcss"
	],
	"scripts": {
		"build": "microbundle",
		"dev": "microbundle watch",
		"test": "jest --coverage && eslint .",
		"version:alpha": "pnpm version prerelease --preid=alpha",
		"publish:alpha": "pnpm publish --tag alpha",
		"version:beta": "pnpm version prerelease --preid=beta",
		"publish:beta": "pnpm publish --tag beta"
	},
	"publishConfig": {
		"access": "public"
	},
	"source": "src/index.js",
	"exports": "./dist/index.modern.js",
	"main": "./dist/index.js",
	"unpkg": "./dist/index.umd.js",
	"author": "dance2die",
	"license": "MIT",
	"repository": "downwindcss/postcss-tailwindcss-at-rules",
	"engines": {
		"node": ">=10.0.0"
	},
	"peerDependencies": {
		"postcss": "^8.2.8"
	},
	"devDependencies": {
		"clean-publish": "^2.1.0",
		"eslint": "^7.21.0",
		"eslint-plugin-jest": "^24.2.1",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"microbundle": "^0.13.3",
		"postcss": "^8.2.8",
		"simple-git-hooks": "^2.0.2"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.js": "eslint --fix"
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 2017
		},
		"env": {
			"node": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:jest/recommended"
		],
		"rules": {
			"jest/expect-expect": "off"
		}
	},
	"jest": {
		"testEnvironment": "node",
		"coverageThreshold": {
			"global": {
				"statements": 100
			}
		}
	},
	"dependencies": {
		"xregexp": "^5.0.2"
	}
}
